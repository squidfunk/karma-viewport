{
  "$schema": "http://json-schema.org/draft-04/schema",
  "type": "object",
  "required": [
    "context",
    "breakpoints"
  ],
  "properties": {
    "context": {
      "description": "Context element selector",
      "type": "string"
    },
    "breakpoints": {
      "description": "Breakpoints",
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "size"
        ],
        "properties": {
          "name": {
            "description": "Breakpoint name",
            "type": "string"
          },
          "size": {
            "description": "Breakpoint viewport",
            "type": "object",
            "required": [
              "width",
              "height"
            ],
            "properties": {
              "width": {
                "description": "Viewport width",
                "type": "integer"
              },
              "height": {
                "description": "Viewport height",
                "type": "integer"
              }
            }
          }
        }
      }
    }
  }
}
